<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_device_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
    <Button
            android:text="开继电器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_open" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_info"
            app:layout_constraintStart_toStartOf="@+id/tv_device_info"
            app:layout_constraintEnd_toEndOf="@+id/tv_device_info"/>
    <Button
            android:text="关继电器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_close" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_open" app:layout_constraintStart_toStartOf="@+id/bt_open"
            app:layout_constraintEnd_toEndOf="@+id/bt_open"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_command" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_close"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_endpoint" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_command" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="打开设备"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_open_device" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_endpoint" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>